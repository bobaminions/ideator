<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for Idea.new do |f| %>
          <%= f.input :description %>
          <%= f.input :author %>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<section class="ideator__block ideator__block--form text-center">
    <div class="ideator__block-row">
        
        <div class="container">
            <div class="row clearfix">
                <div class="col-xs-12">
                    <div class="btn-group ideator__btn-group ideator__btn-group--idea">
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">Add Idea</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</section>

<section class="ideator__block ideator__block--form text-center">
    <div class="ideator__block-row">
        
        <div class="container">
            <% if flash[:alert] %>
                <div class="ideator__message ideator__message--big ideator__message--error"><%= flash[:alert] %></div>
            <% end %>
        </div>
    </div>
</section>

<section class="ideator__block ideator__block--intro">
    <div class="ideator__block-row">
        
        <div class="container">
            <div class="row clearfix">
                <div class="col-xs-12">
                    <% @ideas.each do |idea| %>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <blockquote>
                                    <p><%= idea.description %></p>
                                    <small><%= idea.author %></small>
                                </blockquote>
                                <div class="btn-group ideator__btn-group ideator__btn-group--action" role="group">
                                    <%= link_to 'Revise', edit_idea_path(idea), class: 'btn btn-sm btn-success' %>
                                    <%= link_to 'Delete', idea_path(idea), class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "Are you sure?"} %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        
    </div>
</section>