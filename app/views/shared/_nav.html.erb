<!-- Partial file that contains structure related to navigation of the ideator application -->

<!-- Adding bootstrap nav in Ideator App -->
<header id="ideator__masthead" class="ideator__header ideator__masthead">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="row clearfix">
        <div class="col-xs-12">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to 'Ideator', root_path, class: "navbar-brand" %>
          </div>
  
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav" role="menu">
              <li><%= link_to 'All Ideas', root_path %></li>
              <li><%= link_to 'Inspire Me', random_path %></li>
              <li><%= link_to 'About', about_path %></li>
            </ul>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </nav><!-- /.#Adding bootstrap nav in Ideator App -->
</header><!-- /.#Ideator App's header -->